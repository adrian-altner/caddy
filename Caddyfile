# Serves the static Astro build from the shared Docker volume mounted at /srv
adrian-altner.com {
  root * /srv
  encode gzip
  file_server
  log {
    output file /var/log/caddy/access.log
  }
}

# Redirect www to apex
www.adrian-altner.com {
  redir https://adrian-altner.com{uri}
}
